@{
  Layout = "_Layout";
}
@model DoctorOffice.Models.Doc

<h4>Doctor Details:</h4>

@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)

@if (@Model.JoinEntities.Count == 0)
{
  <p>This Dr. has no current patients</p>
}
else 
{
  <h4>This Doctors current patients: </h4>
  <ul>
    @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Patient.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to doctors", "Index")</p>
<p>@Html.ActionLink("Edit doctor", "Edit", new {id = Model.DocId })</p>
<p>@Html.ActionLink("Remove Doctor", "Delete", new { id = Model.DocId })</p>