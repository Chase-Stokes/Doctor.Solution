@{
  Layout = "_Layout";
}
@using DoctorOffice.Models
@model List<DoctorOffice.Models.Patient>

<h4>Patients: </h4>

@if (@Model.Count == 0)
{
  <h4>No patients have been added yet</h4>
}
<ul>
  @foreach(Patient patient in Model)
  {
    <li>@Html.ActionLink($"{patient.Name}", "Details", new { id = patient.PatientId })</li>
  }
</ul>
<p>@Html.ActionLink("Add a new patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>